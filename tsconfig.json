{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}